# YouTube Data API v3
YOUTUBE_DATA_API_KEY=your_youtube_data_api_key_here

# AI Analysis (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default AI Model (optional) - uses free model if not specified
DEFAULT_MODEL=x-ai/grok-4.1-fast:free

# Firebase Configuration (for history storage)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Transcript Services (Optional - for better transcript reliability)
# Tier 1: youtube-transcript-api (free, no key needed - uses youtube-transcript.io)
# Tier 2: Supadata API (100 free transcripts/month)
SUPADATA_API_KEY=your_supadata_api_key_here
# Tier 3: Google Gemini API (AI transcription for videos without captions)
GOOGLE_API_KEY=your_google_gemini_api_key_here
